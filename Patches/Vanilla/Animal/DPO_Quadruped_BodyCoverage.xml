<Patch>

    <!--=== Modify coverage of Vanilla Human bodyparts. Goal is to make Torso more often the target.===-->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
            <!--Quadruped_Body-->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/BodyDef[label="quadruped animal"]/corePart/parts//li[def="Tail"]/coverage</xpath>
                <value>
                    <coverage>0.05</coverage>
                </value>
            </li>
            <!--Quadruped_Body_Organs-->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/BodyDef[label="quadruped animal"]/corePart/parts//li[def="Stomach"]/coverage</xpath>
                <value>
                    <coverage>0.04</coverage>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/BodyDef[label="quadruped animal"]/corePart/parts//li[def="Lung"]/coverage</xpath>
                <value>
                    <coverage>0.05</coverage>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/BodyDef[label="quadruped animal"]/corePart/parts//li[def="Liver"]/coverage</xpath>
                <value>
                    <coverage>0.04</coverage>
                </value>
            </li>
            <!--Monkey_Body_Organs-->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/BodyDef[label="monkey"]/corePart/parts//li[def="Lung"]/coverage</xpath>
                <value>
                    <coverage>0.05</coverage>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/BodyDef[label="monkey"]/corePart/parts//li[def="Liver"]/coverage</xpath>
                <value>
                    <coverage>0.04</coverage>
                </value>
            </li>
        </operations>
    </Operation>

</Patch>
