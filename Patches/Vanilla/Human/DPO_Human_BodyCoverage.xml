<Patch>

    <!--=== Modify coverage of Vanilla Human bodyparts. Goal is to make Torso more often the target.===-->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
            <!--Torso-->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/BodyDef[defName="Human"]/corePart/parts//li[def="Ribcage"]/coverage</xpath>
                <value>
                    <coverage>0.08</coverage>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>/Defs/BodyDef[defName="Human"]/corePart/parts//li[def="Sternum"]/coverage</xpath>
